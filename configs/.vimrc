color desert                    " 配色
set guifont=Monaco
syntax on                       " 语法高亮
syntax enable                   " 打开语法高亮
set number                      " 显示行号
set tabstop=4                   " 缩进
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab
filetype on                     " 文件类型检测
filetype indent on
filetype plugin on
filetype plugin indent on
set autoindent                  " 对齐
set smartindent
set laststatus=2                " 启动显示状态行
set showcmd                     " 显示输入的命令
set showmatch                   " 显示匹配
set hlsearch                    " 高亮查找匹配
set cursorline                  " 高亮当前行
set ruler                       " 显示标尺
set ignorecase                  " 搜索不区分大小写
set paste
set fileencodings=utf-8,gbk     " 文件编码
set termencoding=utf-8
let &termencoding=&encoding
set encoding=utf-8
